<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/custom"
    android:orientation="vertical"
    android:paddingStart="18dp"
    android:paddingEnd="18dp"
    tools:context=".edit">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/lastphoto"
                android:layout_width="240dp"
                android:layout_height="120dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="48dp"
                android:layout_marginBottom="20dp"
                android:adjustViewBounds="true"
                android:maxHeight="300dp"
                android:padding="16dp"
                android:scaleType="centerCrop"
                android:src="@drawable/che" />

            <EditText
                android:id="@+id/lastname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="70dp"
                android:background="#11000000"
                android:drawableStart="@drawable/person"
                android:drawablePadding="12dp"
                android:ems="10"
                android:hint="Input your name"
                android:inputType="text"
                android:padding="15dp"
                android:textColor="#fff"
                android:textColorHint="#df546e" />

            <EditText
                android:id="@+id/lastsurname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:background="#11000000"
                android:drawableStart="@drawable/person"
                android:drawablePadding="12dp"
                android:ems="10"
                android:hint="Input your surname"
                android:inputType="text"
                android:padding="15dp"
                android:textColor="#fff"
                android:textColorHint="#df546e" />

            <EditText
                android:id="@+id/lastcontact"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:background="#11000000"
                android:drawableStart="@drawable/call"
                android:drawablePadding="12dp"
                android:ems="10"
                android:hint="Input your number"
                android:inputType="number"
                android:padding="15dp"
                android:textColor="#fff"
                android:textColorHint="#df546e" />

            <EditText
                android:id="@+id/lastmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:background="#11000000"
                android:drawableStart="@drawable/mail"
                android:drawablePadding="12dp"
                android:ems="10"
                android:hint="Input your mail"
                android:inputType="textEmailAddress"
                android:padding="15dp"
                android:textColor="#fff"
                android:textColorHint="#df546e" />

            <Button
                android:id="@+id/lastbutton"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="50dp"
                android:background="@drawable/custum"
                android:padding="16dp"

                android:text="Valider" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>